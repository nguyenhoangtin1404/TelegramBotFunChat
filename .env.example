# Telegram Bot Configuration
# Copy this to .env and fill in your actual values

# Your Telegram Bot Token (from BotFather)
TELEGRAM_TOKEN=your_bot_token_here

# Your Groq API Key (from console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Groq model bạn được cấp quyền (ví dụ llama-3.3-70b-versatile)
GROQ_MODEL=llama-3.3-70b-versatile

# Optional: override Groq endpoint if tài khoản của bạn dùng URL khác
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# Telegram bot username (without @) để bot nhận diện mention nhanh
BOT_USERNAME=your_bot_username

# Số lượng tin nhắn gần nhất gửi kèm lên Groq (0 = tắt)
CHAT_HISTORY_LENGTH=4

# Webhook Configuration
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5000
